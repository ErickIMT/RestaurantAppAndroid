<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgProducto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/txtNombreProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imgProducto"
            android:layout_toRightOf="@+id/imgProducto"
            android:text="Nombre Producto"
            android:textSize="21dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPrecioProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNombreProducto"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imgProducto"
            android:layout_toRightOf="@+id/imgProducto"
            android:text="50.00"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btnAgregarPlato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgProducto"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_bg"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/btn_agregar_producto"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layoutBtnsProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@id/txtPrecioProducto"
            android:layout_toEndOf="@id/imgProducto">

            <ImageView android:id="@+id/imgMenos"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@id/txtPrecioProducto"
                android:layout_toEndOf="@id/imgProducto"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_remove_circle"
                app:tint="@color/accentColor"/>

            <TextView android:id="@+id/txvCantPlato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_toEndOf="@id/imgMenos"
                android:layout_below="@id/txtPrecioProducto"
                android:layout_marginStart="05dp"
                android:layout_marginEnd="05dp"
                android:textColor="@color/black"
                android:text="0"
                android:gravity="center_horizontal"/>

            <ImageView android:id="@+id/imgMas"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_toEndOf="@id/txvCantPlato"
                android:layout_below="@id/txtPrecioProducto"
                android:src="@drawable/ic_add_circle"
                app:tint="@color/accentColor"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>